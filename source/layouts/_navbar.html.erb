<header class="navbar-wagon">
  <% data.offices.each do |office| %>
    <!-- logo -->
    <div class="navbar-wagon-brand">
      <% link_to '/index.html' do  %>
        <p class="name"><%= office.work.capitalize %></p>
        <div class="hidden-sm hidden-md hidden-lg">
          <p class="btn btn-primary"> <i class="fa fa-phone" aria-hidden="true"></i> <%= office.phone %></p>
        </div>
      <% end %>
    </div>

    <div class="navbar-wagon-right hidden-xs">
       <p class="btn btn-primary">Appelez nous au <%= office.phone %></p>
    </div>
  <% end %>
</header>
